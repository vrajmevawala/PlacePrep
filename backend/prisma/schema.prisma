// Prisma schema for PlacePrep backend
// Generated from db.model.js

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  Aptitude
  Technical
}

enum Level {
  easy
  medium
  hard
}

model User {
  id         Int      @id @default(autoincrement())
  role       String   @default("user")
  fullName   String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model Question {
  id           Int      @id @default(autoincrement())
  category     Category
  subcategory  String
  level        Level
  question     String
  options      String   
  correctAns   String
  explanation  String
  visibility   
  createdBy    Int      // User ID who created the question
  created_at   DateTime @default(now())
}





